{
  "root": true,
  "extends": ["cesium/browser"],
  "plugins": ["html", "es"],
  "parserOptions": {
    "ecmaVersion": 2023
  },
  "rules": {
    "no-unused-vars": ["error", { "vars": "all", "args": "none" }]
  },
  "overrides": [
    {
      "files": ["vite.config.js"],
      "extends": ["cesium/node"],
      "globals": {
        "__dirname": "readonly"
      }
    }
  ]
}
